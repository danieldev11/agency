---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <main class="container">
        <section class="hero">
            <h1>Mow Bros</h1>
            <p>Welcome to Mow Bros.</p>
        </section>

        <section class="card">
            <h2>Get in touch</h2>
            <form id="contact">
                <label>
                    Name
                    <input name="name" required />
                </label>

                <label>
                    Email
                    <input type="email" name="email" required />
                </label>

                <label>
                    Message
                    <textarea name="message" rows="4"></textarea>
                </label>

                <button type="submit">Send</button>
            </form>
        </section>
    </main>

    <script>
        const form = document.getElementById('contact');
        form?.addEventListener('submit', (e) => {
            e.preventDefault();
            alert('Form submitted!');
        });
    </script>

    <style>
        :root { --bg: #f8fafc; --text: #0f172a; --muted: #475569; --card: #ffffff; --border: #e2e8f0; --accent: #3b82f6; }
        * { box-sizing: border-box; }
        .container { margin: 0 auto; max-width: 720px; padding: 48px 16px; }
        .hero h1 { margin: 0; font-size: 2rem; color: var(--text); }
        .hero p { color: var(--muted); }
        .card { margin-top: 24px; padding: 16px; background: var(--card); border: 1px solid var(--border); border-radius: 12px; }
        form { display: grid; gap: 12px; }
        label { display: grid; gap: 6px; color: var(--text); }
        input, textarea { width: 100%; padding: 10px; border: 1px solid var(--border); border-radius: 8px; font: inherit; }
        button { padding: 10px 14px; border: 0; border-radius: 8px; background: var(--accent); color: white; cursor: pointer; }
        button:hover { opacity: 0.9; }
    </style>
</Layout>